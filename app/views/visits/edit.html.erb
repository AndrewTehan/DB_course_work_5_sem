 <section id="visit" class="visit section-bg" style="margin-top: 150px">
  <div class="container">

    <div class="section-title">
      <h2><%= t "edit_visit.edit_visit"%></h2>
    </div>

    <div class="row">
      <div class="col-sm">
        <%= form_with url: client_visit_path(@client, @visit["visit_id"]), class: "php-email-form", method: :put, model: @visit do |form| %>
          <div class="form-group mt-3">
              <%= form.text_field :date, class: "form-control", type: "datetime-local", value: @visit["visit_date"], required: true %>
          </div>

          <div class="form-group mt-3">
            <%= form.text_area :addition, class: "form-control", value: @visit["visit_addition"] %>
          </div>

          <div class="my-3">
            <div class="loading">Loading</div>
            <div class="error-message"></div>
            <div class="sent-message">Your order has been edited. Thank you!</div>
          </div>
          <div class="text-center"><button type="submit"><%= t "edit_visit.edit_button"%></button></div>
        <% end %>
      </div>
    </div>
  </div>
</section>