<section id="visit" class="visit section-bg" style="margin-top: 150px">
  <div class="container">
    <div class="section-title">
      <h2>Edit Account</h2>
    </div>
    <div class="col-lg-12">
      <%= form_with url: edit_user_path(@user), class: "php-email-form", method: :put, model: @user do |form| %>
        <div class="row">
          <div class="col-md-6 form-group">
            <%= form.text_field :first_name, class: "form-control" %>
            <% @user.errors.full_messages_for(:first_name).each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>
          <div class="col-md-6 form-group">
            <%= form.text_field :last_name, class: "form-control" %>
            <% @user.errors.full_messages_for(:last_name).each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 form-group">
            <%= form.email_field :email, class: 'form-control' %>   
            <% @user.errors.full_messages_for(:email).each do |message| %>
              <div><%= message %></div>
            <% end %> 
          </div>

          <div class="col-md-6 form-group">
            <%= form.text_field :phone_number, class: "form-control" %>
            <% @user.errors.full_messages_for(:phone_number).each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>
        </div>
        
        <div class="my-3">
          <div class="loading">Loading</div>
          <div class="error-message"></div>
          <div class="sent-message">Your message has been sent. Thank you!</div>
        </div>
        <div class="text-center"><button type="submit">Edit</button></div>
      <% end %>
    </div>
  </div>
</section>